<%- model_class = Rsvp -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:surname) %></th>
      <th><%= model_class.human_attribute_name(:firstname) %></th>
      <th><%= model_class.human_attribute_name(:coming) %></th>
      <th><%= model_class.human_attribute_name(:vegetarian) %></th>
      <th><%= model_class.human_attribute_name(:vegan) %></th>
      <th><%= model_class.human_attribute_name(:bus) %></th>
      <th><%= model_class.human_attribute_name(:ferry) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @rsvps.each do |rsvp| %>
      <tr>
        <td><%= link_to rsvp.id, rsvp_path(rsvp) %></td>
        <td><%= rsvp.surname %></td>
        <td><%= rsvp.firstname %></td>
        <td><%= rsvp.coming %></td>
        <td><%= rsvp.vegetarian %></td>
        <td><%= rsvp.vegan %></td>
        <td><%= rsvp.bus %></td>
        <td><%= rsvp.ferry %></td>
        <td><%=l rsvp.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_rsvp_path(rsvp), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      rsvp_path(rsvp),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_rsvp_path,
            :class => 'btn btn-primary' %>
