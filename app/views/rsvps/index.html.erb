  </tr>

<% @rsvps.each do |rsvp| %>
  <tr>
    <td><%= rsvp.surname %></td>
    <td><%= rsvp.firstname %></td>
    <td><%= rsvp.coming %></td>
    <td><%= rsvp.vegetarian %></td>
    <td><%= rsvp.vegan %></td>
    <td><%= rsvp.bus %></td>
    <td><%= rsvp.ferry %></td>
    <td><%= link_to 'Show', rsvp %></td>
    <td><%= link_to 'Edit', edit_rsvp_path(rsvp) %></td>
    <td><%= link_to 'Destroy', rsvp, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

