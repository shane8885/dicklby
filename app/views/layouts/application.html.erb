<!DOCTYPE html>
<html>
<head>
  <title>Shane and Emma's Wedding</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= yield :head %>
</head>
<body>
  <div class="navbar navbar-fixed-top navbar-inverse">
    <div class="navbar-inner">
      <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <a class="brand" href="/pages/home">Emma and Shane's Wedding</a>
        <div class="nav-collapse">
          <ul class="nav">
            <% if user_signed_in? %>
              <% if current_user.admin? %> 
                <li class="dropdown">
                  <a class="dropdown-toggle" data-toggle="dropdown" href="#">RSVP<b class="caret"></b></a>
                  <ul class="dropdown-menu">
                    <li><%= link_to "Leave an RSVP", new_rsvp_path %></li>
                    <li><%= link_to "List RSVPs", rsvps_path %></li>
                  </ul>
                </li>
              <% else %>
                <li><%= link_to "RSVP", new_rsvp_path %></li>
              <% end %>
              <li><%= link_to "Ceremony", pages_ceremony_path %></li>
              <li><%= link_to "Reception", pages_reception_path %></li>
              <li><%= link_to "Transport", pages_transport_path %></li>
              <li><%= link_to "Accomodation", pages_accomodation_path  %></li>
              <li class="divider-vertical"></li>
              <li><%= link_to "Sign Out", destroy_user_session_path, :method => 'delete' %></li>
            <% end %> 
          </ul>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row">
    <div class="span12">
    <% unless flash[:notice].blank? %>
      <div class="alert info">
        <%= content_tag :div, flash[:notice] %>
      </div>
    <% end %>

    <% unless flash[:error].blank? %>
      <div class="alert error">
        <%= content_tag :div, flash[:error] %>
      </div>
    <% end %>

    <% unless flash[:alert].blank? %>
      <div class="alert warning">
        <%= content_tag :div, flash[:alert] %>
      </div>
    <% end %>
    </div>
    </div>
    <%= yield %>
  </div>
</body>
</html>
