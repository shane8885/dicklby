<h2>Sign in</h2>

<%= form_for(resource, :html => { :class => 'form-horizontal' }, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="control-group">
    <%= f.label :username, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :username, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :password, :class => 'control-label' %>
    <div class="controls">
      <%= f.password_field :password %>
    </div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="control-group">
      <%= f.label :remember_me, :class => 'control-label' %>
      <div class="controls">
        <%= f.check_box :remember_me, :class => 'check_box' %> 
      </div>
    </div>
  <% end -%>
  <div class="form-actions">
    <%= f.submit "Sign in", :class => 'btn btn-primary' %>
  </div>
<% end %>

